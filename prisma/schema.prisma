generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id           Int          @id @default(autoincrement())
  title        String
  instructions String
  image        Bytes
  ingredients  String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model user {
  id        Int      @id @default(autoincrement())
  userName  String
  imgUrl    String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
